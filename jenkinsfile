pipeline {
    agent any

    stages {
        stage('build') {
            steps {
                script {
                    docker.image('alpine').inside {
                        sh 'echo "Running inside Docker container"'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
               '''
            }
        }
    }
}
